{
  "compilerOptions": {
    "target": "ES2017",
    "module": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/esm"
  },
  "include": [
    "src/**/*.ts"
  ]
}
